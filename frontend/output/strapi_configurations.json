{
  "components": {
    "alert": {
      "collectionName": "alerts",
      "info": {
        "name": "alert",
        "description": "Reusable component to display preview or informational banners."
      },
      "options": {
        "increments": true,
        "timestamps": true
      },
      "attributes": {
        "preview": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "avatar": {
      "collectionName": "avatars",
      "info": {
        "name": "avatar",
        "description": "Component for displaying avatar with user name and image."
      },
      "options": {
        "increments": true,
        "timestamps": true
      },
      "attributes": {
        "name": {
          "type": "string",
          "required": true
        },
        "picture": {
          "type": "media",
          "multiple": false,
          "required": true
        }
      }
    },
    "cover_image": {
      "collectionName": "cover_images",
      "info": {
        "name": "cover_image",
        "description": "A component for display and link handling of cover images."
      },
      "options": {
        "increments": true,
        "timestamps": true
      },
      "attributes": {
        "title": {
          "type": "string",
          "required": true
        },
        "src": {
          "type": "media",
          "multiple": false,
          "required": true
        },
        "slug": {
          "type": "string"
        }
      }
    },
    "post_preview": {
      "collectionName": "post_previews",
      "info": {
        "name": "post_preview",
        "description": "Component to display a brief overview of a post."
      },
      "attributes": {
        "title": {
          "type": "string",
          "required": true
        },
        "coverImage": {
          "component": "components.cover_image",
          "required": true
        },
        "date": {
          "type": "date",
          "required": true
        },
        "excerpt": {
          "type": "richtext",
          "required": true
        },
        "author": {
          "component": "components.avatar",
          "required": true
        },
        "slug": {
         "type": "uid",
         "required": true
        }
      }
    }
  },
  "contentTypes": {
    "post": {
      "collectionName": "posts",
      "info": {
        "name": "post",
        "description": "Content type for blog posts."
      },
      "options": {
        "increments": true,
        "timestamps": true,
        "draftAndPublish": true
      },
      "attributes": {
        "title": {
          "type": "string",
          "required": true
        },
        "coverImage": {
          "component": "components.cover_image"
        },
        "date": {
          "type": "datetime",
          "required": true
        },
        "excerpt": {
          "type": "text"
        },
        "content": {
          "type": "richtext",
          "required": true
        },
        "slug": {
          "type": "uid",
          "required": true,
          "unique": true
        },
        "author": {
          "component": "components.avatar"
        },
        "preview": {
          "type": "boolean",
          "default": false
        }
      }
    }
  }
}