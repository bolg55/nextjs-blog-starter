{
  "kind": "collectionType",
  "collectionName": "alerts",
  "info": {
    "name": "alert",
    "description": "Information for preview status alerts"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "preview": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "message": {
      "type": "richtext",
      "required": true
    },
    "link": {
      "type": "component",
      "repeatable": false,
      "component": "general.link"
    },
    "link_text": {
      "type": "string"
    },
    "background_color": {
      "type": "string",
      "default": "bg-neutral-50",
      "required": true
    },
    "border_color": {
      "type": "string",
      "default": "border-neutral-200",
      "required": true
    },
    "text_color": {
      "type": "string",
      "default": "text-black"
    },
    "hover_text_color": {
      "type": "string"
    }
  }
}