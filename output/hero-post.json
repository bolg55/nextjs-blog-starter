{
  "kind": "collectionType",
  "collectionName": "heroposts",
  "info": {
    "name": "heropost",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": true
    },
    "date": {
      "type": "date",
      "required": true
    },
    "excerpt": {
      "type": "richtext",
      "required": true
    },
    "author": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::author.author",
      "required": true
    },
    "slug": {
      "type": "uid",
      "required": true,
      "targetField": "title"
    }
  }
}